# status_command while date +'%Y-%m-%d %I:%M:%S %p'; do sleep 1; done
		colors {
#statusline #ffffff
#background #323232
#inactive_workspace #32323200 #32323200 #5c5c5c
			background #002b36
				statusline #93a1a1
				separator  #657b83
				focused_workspace  #586e75 #839496 #002b36
