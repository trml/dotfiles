bindsym $a+Shift+8 move container to workspace 8
bindsym $a+Shift+9 move container to workspace 9
bindsym $a+Shift+0 move container to workspace 0

# reload the configuration file
bindsym $a+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $a+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $a+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

