exec "setxkbmap -layout no"
exec "xmodmap -e 'clear Lock'"
exec "xmodmap -e 'keycode 0x42 = Escape'"
# bind altgr+comma/period to < and >
exec "xmodmap -e 'keycode 0x3b = comma semicolon comma semicolon less dead_ogonek dead_cedilla'"
exec "xmodmap -e 'keycode 0x3c = period colon period colon greater periodcentered ellipsis'"

